<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Serviços Disponíveis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Serviços Disponíveis</h1>
        <form action="/search-services" method="GET" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar serviços" aria-label="Search" name="query">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
        </form>
        <% services.forEach(function(service) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= service.descricao %></h5>
                    <p class="card-text">Preço por hora: <%= service.precoPorHora %></p>
                    <a href="#" class="btn btn-primary">Contratar</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>